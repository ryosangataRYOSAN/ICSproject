        <File Id="Plugin_FileViewer" Name="Plugin_FileViewer.dll" Source="$(var.SrcDir)Plugins\Plugin_FileViewer.dll" />
        <File Id="Plugin_Julius" Name="Plugin_Julius.dll" Source="$(var.SrcDir)Plugins\Plugin_Julius.dll" />
