        <File Id="DefaultMDF" Name="MMDAgent.mdf" Source="$(var.SrcDir)MMDAgent.mdf" KeyPath="yes" />
      </Component>
      <Component Id="Plugins" Directory="PluginDir" Guid="231F3572-7E97-45CC-8D98-09070195125D">
